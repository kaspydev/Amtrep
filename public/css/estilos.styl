@import "normalize.css"
@import "style.css"

blanco = #fff
gris_texto = #555
gris = #3f4e62
verde = #16a085
azul = #418bca
rojo = #d9544f
naranja = rgb(255, 193, 0)

body
	background #e8e8e8

header
	box-shadow 0 2px 2px 0 rgba(0, 0, 0, 0.1), 0 1px 0 0 rgba(0, 0, 0, 0.1);
	background blanco
	h1
		color #d9534f
		text-align center
		margin 0
		padding .2em 0

.content
	padding 1em .5em
	.machine
		.machine-title
			margin 0
			padding 1em
			background gris
			color blanco
			font-size 1em
		.machine-graphics
			text-align center
			.graphic
				margin .5em
				.graphic-area
					h3
						text-align center
						margin 0
						padding .5em 0
					.plano
						height 300px
						margin 1em

.graphic-area
	background-color blanco
	border 1px solid transparent
	border-radius 4px
	border-color #c9c9c9
	h3
		border-bottom: 1px solid #c9c9c9;
		border-radius 4px 4px 0 0
		color gris_texto
		background-color: #f0f0f0;
		background-image: linear-gradient(to bottom, rgba(255, 255, 255, 0.9) 10%, rgba(255, 255, 255, 0.1) 100%);

@media screen and (min-width: 1000px)
	.graphic
		display inline-block
		width 48%